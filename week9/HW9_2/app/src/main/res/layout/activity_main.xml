<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/lay_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn1_1"
                style="@style/ButtonStyle" />

            <Button
                android:id="@+id/btn1_2"
                style="@style/ButtonStyle" />

            <Button
                android:id="@+id/btn1_3"
                style="@style/ButtonStyle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn2_1"
                style="@style/ButtonStyle" />

            <Button
                android:id="@+id/btn2_2"
                style="@style/ButtonStyle" />

            <Button
                android:id="@+id/btn2_3"
                style="@style/ButtonStyle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn3_1"
                style="@style/ButtonStyle" />

            <Button
                android:id="@+id/btn3_2"
                style="@style/ButtonStyle" />

            <Button
                android:id="@+id/btn3_3"
                style="@style/ButtonStyle" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnRestart"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_marginTop="30dp"
        android:text="@string/str_restart"
        android:textSize="28sp" />
</LinearLayout>